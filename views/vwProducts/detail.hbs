                      </li>
                      <li>
                        <i class="fas fa-star blue-text"></i>
                      </li>
                    </ul>
                    <div class="card-data">
                      <ul class="list-unstyled mb-1">
                        <li class="comment-date font-small grey-text">
                          <i class="far fa-clock"></i> 05/10/2015</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </section>
              <!--Section: Block Content-->
            </div>
          </div>
          <h3 class="font-weight-bold text-center dark-grey-text mb-5">Sản phẩm liên quan</h3>
          <!-- Grid row -->
          <div class="products px-4 row d-flex justify-content-between">
            {{#each psRelative}}
              <!-- Grid column -->
              <div onclick="getDetailProduct('{{ProID}}')"
                class="product-card text-white col-md-2 mb-4 pt-3 d-flex justify-content-center">
                <div id={{ProID}} class="well text-center d-flex flex-wrap flex-column justify-content-center ">
                  <!--Card view-->
                  <div class="view overlay zoom d-flex justify-content-center">
                    <img src="../../../sp/{{ProID}}/1.jpg" class="img-fluid" alt="zoom">
                    <div class="mask flex-center waves-effect waves-light ">
                      <p class="card-body text-white  rgba-black-strong p-2 align-self-end">
                        {{ProName}}</p>
                    </div>
