<script type="text/javascript" src="../../assets/js/ckeditor/ckeditor.js"></script>
<header>
  <!-- Navbar -->
  {{>home/header}}
</header>
<main>
<!-- Editable table -->

<div class="card">
  <div class="card-header text-center font-weight-bold text-uppercase py-4">My Products/div>
  <div class="card-body">
      <span class="table-add float-right mb-3 mr-2"><a href="/seller/sale-register" class="text-success"><i
            class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
      <table class="table table-bordered table-responsive-md table-striped text-center">
        <thead>
          <tr>
            <th class="text-center">Product Name</th>
            <th class="text-center">Price</th>
            <th class="text-center">Step</th>
            <th class="text-center">Price To Buy</th>
            <th class="text-center">Time Start</th>
            <th class="text-center">Time Finish</th>
            <th class="text-center">Description</th>
          </tr>
        </thead>
        {{#each Table}}
        <tbody>
          <tr>
            <td class="pt-3-half" contenteditable="true">{{ProName}}</td>
            <td class="pt-3-half" contenteditable="true">{{Price}}</td>
            <td class="pt-3-half" contenteditable="true">{{Step}}</td>
            <td class="pt-3-half" contenteditable="true">{{PriceToBuy}}</td>
            <td class="pt-3-half" contenteditable="true">{{TimeStart}}</td>
            <td class="pt-3-half" contenteditable="true">{{TimeFinish}}</td>
            <td>
              <span class="table-edit">
                <button type="button" data-toggle="modal" data-target="#modalCart{{ProID}}"class="btn btn-danger btn-rounded btn-sm my-0" onclick="EditDes({{ProID}})">Edit</button>
              </span>
              <div class="modal fade" id="modalCart{{ProID}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                  <!--Header-->
                    <div class="modal-header">
                      <h4 class="modal-title" id="myModalLabel">{{ProName}}</h4>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                      </button>
                    </div>
                    <!--Body-->
                    <div class="modal-body">
                      <textarea class="form-control md-textarea" id="editor{{ProID}}" name="product_description" rows="5">{{FullDes}}</textarea>
                    </div>
                    <div class="modal-footer">
                      <button type="button" data-toggle="modal" data-target="#modalCart{{ProID}}"class="btn btn-danger btn-rounded btn-sm my-0" onclick="">Commit</button>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
          <!-- This is our clonable table line -->
        </tbody>
        {{/each}}
      </table>
    </div>
  </div>

</div>
<!-- Editable table -->
</main>
<footer>
  <i class="footer-bor" style="background:#acacac;opacity:.1;"></i>
  <div id="footer" class="footer wow slideInUp backcolor back-footer animated"
    style="background: rgb(236, 179, 90); visibility: visible; animation-name: slideInUp;">
    {{>home/bottom}}
  </div>
  <!-- /footer -->
  <script type="text/javascript">
    var qq_left = "3",
      qq_topbottom = 50;
    $(".kefu_q3 .default").on("click", function () {
      $(this).animate({
        "right": -120 + '%'
      }, 100);
      $(".default-hide").animate({
        "margin-right": 0
      }, 300);
    })
    $(".colse").on("click", function () {
      $(".default-hide").animate({
        "margin-right": -120 + '%'
      }, 100);
      $(".kefu_q3 .default").animate({
        "right": qq_left + 'px',
        "bottom": qq_topbottom + 'px'
      }, 300);
    })
  </script>
</footer>
<script>
  function EditDes(ProID)
  {
    CKEDITOR.replace(`editor${ProID}`);
  }
  
</script>